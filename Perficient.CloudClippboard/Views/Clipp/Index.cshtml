@model Perficient.CloudClippboard.Models.ClippViewModel
@{
    ViewBag.Title = "Clipp";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-10">
            <h1>Perficient Cloud Clipboad</h1>
            <p class="lead">transfer text of files with ease, both directions</p>
        </div>
        <div class="col-md-2">
            @if (!Model.IsAuthenticated)
            {
                @Html.Partial("_ExternalLogin");
            }
            else
            {
                @Html.Partial("_Logout");
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="form-inline">
                <label for="clipboardKey">Clipboard key</label>
                <div class="input-group">
                    <input type="text" class="form-control" value="@Model.UniqueKey" id="clipboardKey" @(Model.IsAuthenticated?"disabled":"") />
                    <span class="input-group-btn" id="cliboardKeyRefresh">
                        <button class="btn btn-success" type="button" @(Model.IsAuthenticated ? "disabled" : "")><span class="glyphicon glyphicon-refresh"></span></button>
                    </span>
                    <span class="input-group-btn">
                        <button class="btn btn-info" type="button" id="cliboardKeyChange" @(Model.IsAuthenticated ? "disabled" : "")>Update</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="clipp-container">
    <div class="panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseText"><span class="glyphicon glyphicon-envelope"></span>&nbsp;Send text</a>
                </h4>
            </div>
            <div id="collapseText" class="panel-collapse collapse in">
                <div class="panel-body">
                    <textarea id="message">@Model.Text</textarea>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseFiles"><span class="glyphicon glyphicon-upload"></span>&nbsp;Send files</a>
                </h4>
            </div>
            <div id="collapseFiles" class="panel-collapse collapse">
                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-8">
                            <div class="alert alert-info" role="alert" id="droptarget">Drop files here</div>
                        </div>
                        <div class="col-md-4">                            
                            <span class="btn btn-danger btn-file btn-lg btn-block">
                                ... Or click select files <input type="file" id="selectFile" name="selectFile" multiple>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="progress" id="progressPanel">
                                <div id="progressBar" class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                    <span id="progressText" class="sr-only">0% Complete</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-danger" role="alert" id="alertPanel"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="list-group" id="fileList">                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </div>
</div>


@section scripts {
    <script type="text/javascript">
        var uniqueKey = '@Model.UniqueKey';
    </script>

    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <script src="~/Scripts/clipp.app.js"></script>
}